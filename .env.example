# API Configuration
VITE_API_URL=http://localhost:3001     # JSON server API endpoint
VITE_API_PROXY=/api                    # API proxy path used in vite.config.js

# Application Configuration
VITE_APP_TITLE=SignForMe AI           # Application title
VITE_BASE_URL=http://localhost:4000   # Frontend application URL

# Environment Configuration
NODE_ENV=development                  # Environment mode (development/production)

# Server Configuration
PORT=4000                            # Vite development server port
API_PORT=3001                        # JSON server port

# This is an example environment file
# 1. Copy this file to .env and adjust values as needed
# 2. Ensure VITE_API_URL matches the JSON server port
# 3. VITE_API_PROXY should match the proxy setting in vite.config.js
# 4. In production, update VITE_API_URL to your deployed API endpoint
